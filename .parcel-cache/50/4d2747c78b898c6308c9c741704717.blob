* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.main {
    height: 100vh;
    width: 100vw;
    position: relative;
    display: flex;
}

.leftbox {
    position: absolute;
    left: 0;
    width: 25%;
    height: 100%;
    right: 0;
    background-color: rgb(43, 163, 199);
    transform: translateX();
}

.box1 {
    position: absolute;
    height: 100%;
    width: 75%;
    left: 25%;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

img {
    width: 100%;
    height: 100%;
}

.box2 {
    position: absolute;
    height: 100%;
    width: 75%;
    left: 25%;
    right: 0;
    background-color: rgb(43, 163, 199);
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30px;
    text-align: center;
}

.box3 {
    position: relative;
    height: 100%;
    width: 75%;
    left: 25%;
    right: 0;
    background-color: black;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
    color: #fff;
    font-size: 30px;
    text-align: center;
}

.box3:before {
    position: absolute;
    top: 0;
    bottom: -200px;
    left: 5px;
    right: 0;
    background-color: #fff;
    z-index: 2;
    content: "";
    border: none;
    outline: none;
}

.box1Text, .box2Text, .box3Text {
    opacity: 1;
    width: 100px;
    color: #fff;
}

