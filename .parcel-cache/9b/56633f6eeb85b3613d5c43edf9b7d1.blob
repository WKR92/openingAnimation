* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.main {
    height: 100vh;
    width: 100vw;
    position: relative;
}

.box1 {
    position: absolute;
    height: 100%;
    width: 75%;
    left: 25%;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.box2 {
    position: absolute;
    height: 100%;
    width: 75%;
    left: 25%;
    right: 0;
    background-color: blue;
    display: flex;
    justify-content: center;
    align-items: center;
}

.box3 {
    position: relative;
    height: 100%;
    width: 75%;
    left: 25%;
    right: 0;
    background-color: green;
    display: flex;
    justify-content: center;
    align-items: center;
}

.box3::after {
    position: absolute;
    
}

