* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.main {
    height: 100vh;
    width: 100vw;
    position: relative;
    display: flex;
}

.leftBox {
    position: absolute;
    left: 0;
    width: 25%;
    height: 100%;
    right: 0;
    background-color: #000;
    display: flex;
    justify-content: center;
    align-items: center;
}

.menu {
    display: flex;
    align-items: center;
    height: 75%;
    width: auto
}

ul {
    list-style-type: none;
}

li {
    color: #fff;
    text-decoration: none;
    cursor: pointer;
    margin-bottom: 20px;
    text-decoration: none;
    position: relative;
    width: auto;
    z-index: 1;
    display: flex;
    font-size: 18px;
}

li::after {
    position: absolute;
    content: "";
    width: 0%;
    height: 30%;
    background-color: rgb(194, 121, 26);
    bottom: 0;
    z-index: -1;
    transition: all 250ms ease;
}

li:hover:after{
    width: 100%;
}

.bgDiv{
    position: absolute;
    height: 100%;
    width: 75%;
    left: 25%;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-image: url("03b07d6b2328f6552dd9a59bfa30d02f");
    background-size: 100% 100%;
    z-index: -2;
}

.box1 {
    position: absolute;
    height: 100%;
    width: 75%;
    left: 25%;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #000;
    
}

img {
    width: 100%;
    height: 100%;
}

.box2 {
    position: absolute;
    height: 100%;
    width: 75%;
    left: 25%;
    right: 0;
    background-color: rgb(43, 163, 199);
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20px;
    color: #fff;
}

.box3 {
    position: relative;
    height: 100%;
    width: 75%;
    left: 25%;
    right: 0;
    background-color: black;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
    color: #fff;
    font-size: 20px;
}

.box3:before {
    position: absolute;
    top: 0;
    bottom: -200px;
    left: 5px;
    right: 0;
    background-color: #fff;
    z-index: 2;
    content: "";
    border: none;
    outline: none;
}

.box1Text, .box2Text, .box3Text {
    opacity: 1;
    width: 100px;
    color: #fff;
}

.box2Text, .box3Text, .box1Text {
    white-space: nowrap;
    width: auto;
    margin: auto;
    font-size: 22px;
}

.box1Text {
    color: #000;
    font-size: 22px;
    font-style: italic;
}

.ball {
    background-color: rgb(194, 121, 26);
    height: 15px;
    width: 15px;
    border-radius: 50%;
    position: relative;
    
}

.ball:hover {
    animation: bouncing 0.9s forwards;
}

@keyframes bouncing {
    10% {
        transform: translateY(-100%);
        height: 15px;
        width: 15px;
    }
    30% {
        transform: translateY(-30%);
        height: 15px;
        width: 10px;
    }
    50% {
        transform: translateY(0);
    }
    75% {
        transform: translateY(-20%)
    }
    100% {
        transform: translateY(0);
    }
}

