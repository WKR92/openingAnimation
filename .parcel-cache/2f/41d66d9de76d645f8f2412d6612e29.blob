* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.main {
    height: 100vh;
    width: 100vw;
    position: relative;
}

.box1 {
    position: absolute;
    height: 100%;
    width: 75%;
    left: 25%;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.box2 {
    position: absolute;
    height: 100%;
    width: 75%;
    left: 25%;
    right: 0;
    background-color: blue;
    display: flex;
    justify-content: center;
    align-items: center;
}

.box3 {
    position: relative;
    height: 110%;
    width: 75%;
    left: 25%;
    right: 0;
    background-color: black;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
    color: #fff;
}

.box3:before {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 5px;
    right: 0;
    background-color: #fff;
    z-index: 2;
    content: "";
    border: none;
    outline: none;
}

.box1Text, .box2Text, .box3Text {
    opacity: 1;
    width: 100px;
    color: #fff;
}
